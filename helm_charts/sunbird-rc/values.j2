
certificateapi:
  enabled: {{sunbird_rc.certificateapi_enabled}}
  CERTIFICATE_DOMAIN_URL: "https://example.com"
  CERTIFICATE_PUBLIC_KEY: |- 
    {{ CERTIFICATE_PUBLIC_KEY | default("''") | indent(width=4) }}
  CERTIFICATE_PRIVATE_KEY: |-
    {{ CERTIFICATE_PRIVATE_KEY | default("''") | indent(width=4) }}
  
certificatesign:
  enabled: {{sunbird_rc.certificatesign_enabled}}
  CERTIFICATE_DOMAIN_URL: "https://example.com"
  CERTIFICATE_PUBLIC_KEY: |- 
    {{ CERTIFICATE_PUBLIC_KEY | default("''") | indent(width=4) }}
  CERTIFICATE_PRIVATE_KEY: |-
    {{ CERTIFICATE_PRIVATE_KEY | default("''") | indent(width=4) }}


claim-ms:
  enabled: {{sunbird_rc.claim_ms_enabled}}
  claim_msenv:
    connectionInfo_uri: {{postgres_connectionInfo_uri}}
    connectionInfo_username: {{postgres_connectionInfo_username}}
    connectionInfo_password: {{postgres_connectionInfo_password}}
    sunbirdrc_url: http://registry:8081

elasticsearch:
  enabled: {{sunbird_rc.elasticsearch_enabled}} 

filestorage:
  enabled: {{sunbird_rc.filestorage_enabled}}
  filestorageenv:
    MINIO_ROOT_USER: {{filestorage.minio_root_user}}
    MINIO_ROOT_PASSWORD: {{filestorage.minio_root_password}}

keycloak:
  enabled: {{sunbird_rc.keycloak_enabled}}
  keycloakenv:
    DB_PASSWORD: {{postgres_connectionInfo_password}}
    KEYCLOAK_PASSWORD: {{keycloak.admin_password}}
    KEYCLOAK_LOGO: {{keycloak.keycloak_logo_url}}
    DB_VENDOR: 'postgres'
    DB_ADDR: {{postgres_connectionInfo_uri}}
    DB_PORT: '5432'
    DB_DATABASE: 'registry'
    DB_USER: {{postgres_connectionInfo_username}}
    KEYCLOAK_USER: {{keycloak.admin_user}}
    PROXY_ADDRESS_FORWARDING: 'true'
    KEYCLOAK_IMPORT: /opt/jboss/keycloak/imports/realm-export.json
    DOMAIN_NAME: "{{domain_name}}"
    ADMIN_API_SECRET: {{keycloak.admin_api_secret}}

registry:
  enabled: true
  rccoreenv:
    connectionInfo_uri: 'jdbc:postgresql://XXXXXX:5432/registry'
    connectionInfo_username: 'postgres'
    connectionInfo_password: 'postgres'
    elastic_search_enabled: 'false'
    elastic_search_connection_url: 'elasticsearch-master:9200'
    sunbird_sso_admin_client_secret: 'XXXXXX'
    sunbird_sso_url: http://keycloak:8080/auth
    filestorage_access_key: 'admin'
    filestorage_secret_key: 'admin1234'


